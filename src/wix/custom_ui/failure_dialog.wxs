<!-- This file contains the dialog displayed upon error in MyoFInDer's installation -->
<Wix
    xmlns="http://wixtoolset.org/schemas/v4/wxs">

    <Fragment>
        <UI>

            <!-- The error dialog -->
            <Dialog
                CustomPalette="no"
                ErrorDialog="no"
                Height="312"
                Hidden="no"
                Id="FailureDialog"
                KeepModeless="no"
                LeftScroll="no"
                Modeless="no"
                NoMinimize="yes"
                RightAligned="no"
                RightToLeft="no"
                SystemModal="no"
                Title="MyoFInDer Setup"
                TrackDiskSpace="no"
                Width="493"
                X="50"
                Y="50" >

                <!-- Bottom line just for aesthetics -->
                <Control
                    Cancel="no"
                    Default="no"
                    Disabled="no"
                    Height="0"
                    Hidden="no"
                    Id="BottomLine"
                    LeftScroll="no"
                    RightAligned="no"
                    RightToLeft="no"
                    Sunken="no"
                    TabSkip="no"
                    Type="Line"
                    Width="493"
                    X="0"
                    Y="276" />

                <!-- MyoFInDer banner just for aesthetics -->
                <Control
                    Cancel="no"
                    Default="no"
                    Disabled="no"
                    Height="312"
                    Hidden="no"
                    Id="Banner"
                    LeftScroll="no"
                    RightAligned="no"
                    RightToLeft="no"
                    Sunken="no"
                    TabSkip="no"
                    Text="WixUIDialogBmp"
                    Type="Bitmap"
                    Width="171"
                    X="0"
                    Y="0" />

                <!-- Title describing the content of the current window -->
                <Control
                    Cancel="no"
                    Default="no"
                    Disabled="no"
                    FormatSize="no"
                    Height="30"
                    Hidden="no"
                    Id="Title"
                    LeftScroll="no"
                    NoPrefix="yes"
                    NoWrap="yes"
                    RightAligned="no"
                    RightToLeft="no"
                    Sunken="no"
                    TabSkip="no"
                    Text="{\DlgTitleFont}Something went wrong !"
                    Transparent="yes"
                    Type="Text"
                    Width="288"
                    X="190"
                    Y="20" />

                <!-- Message informing the user that something went wrong -->
                <Control
                    Cancel="no"
                    Default="no"
                    Disabled="no"
                    FormatSize="no"
                    Height="70"
                    Hidden="no"
                    Id="Message"
                    LeftScroll="no"
                    NoPrefix="yes"
                    NoWrap="no"
                    RightAligned="no"
                    RightToLeft="no"
                    Sunken="no"
                    TabSkip="no"
                    Text="Something went wrong, and MyoFInDer couldn't be
installed on your computer! Please make sure that you have installed a
compatible version of Python and of the C++ build tools. Your system should have
been rolled back to its previous state and should not have been modified."
                    Transparent="no"
                    Type="Text"
                    Width="288"
                    X="190"
                    Y="110" />

                <!-- Text providing a hyperlink to the troubleshooting information of MyoFInDer -->
                <Control
                    Cancel="no"
                    Default="no"
                    Disabled="no"
                    Height="15"
                    Hidden="no"
                    Id="TroubleshootingLink"
                    LeftScroll="no"
                    RightAligned="no"
                    RightToLeft="no"
                    Sunken="no"
                    TabSkip="yes"
                    Text="Refer to the
&lt;a href=&quot;https://tissueengineeringlab.github.io/MyoFInDer/troubleshooting.html&quot;&gt;troubleshooting section&lt;/a&gt;
of MyoFInDer's website to get assistance."
                    Transparent="no"
                    Type="Hyperlink"
                    Width="288"
                    X="190"
                    Y="180" />

                <!-- Text explaining where to find logs -->
                <Control
                    Cancel="no"
                    Default="no"
                    Disabled="no"
                    FormatSize="no"
                    Height="30"
                    Hidden="no"
                    Id="LogInfo"
                    LeftScroll="no"
                    NoPrefix="yes"
                    NoWrap="no"
                    RightAligned="no"
                    RightToLeft="no"
                    Sunken="no"
                    TabSkip="no"
                    Text="Logs were written to: [TempFolder]MyoFInDer\install_venv.log,
[TempFolder]MyoFInDer\verify_install.log and [TempFolder]MyoFInDer\pip.log.
Please attach them when reporting this issue."
                    Transparent="no"
                    Type="Text"
                    Width="288"
                    X="190"
                    Y="205" />

                <!-- Button for cancelling the installation - disabled -->
                <Control
                    Bitmap="no"
                    Cancel="yes"
                    Default="no"
                    Disabled="yes"
                    ElevationShield="no"
                    FixedSize="no"
                    Height="17"
                    Hidden="no"
                    Icon="no"
                    Id="Cancel"
                    Image="no"
                    LeftScroll="no"
                    RightAligned="no"
                    RightToLeft="no"
                    Sunken="no"
                    TabSkip="no"
                    Text="Cancel"
                    Type="PushButton"
                    Width="56"
                    X="185"
                    Y="285" />

                <!-- Button for switching back to the previous installer window - disabled -->
                <Control
                    Bitmap="no"
                    Cancel="no"
                    Default="no"
                    Disabled="yes"
                    ElevationShield="no"
                    FixedSize="no"
                    Height="17"
                    Hidden="no"
                    Icon="no"
                    Id="Back"
                    Image="no"
                    LeftScroll="no"
                    RightAligned="no"
                    RightToLeft="no"
                    Sunken="no"
                    TabSkip="no"
                    Text="&lt; Back"
                    Type="PushButton"
                    Width="56"
                    X="361"
                    Y="285" />

                <!-- Button for exiting the installer -->
                <Control
                    Bitmap="no"
                    Cancel="yes"
                    Default="yes"
                    Disabled="no"
                    ElevationShield="no"
                    FixedSize="no"
                    Height="17"
                    Hidden="no"
                    Icon="no"
                    Id="Finish"
                    Image="no"
                    LeftScroll="no"
                    RightAligned="no"
                    RightToLeft="no"
                    Sunken="no"
                    TabSkip="no"
                    Text="Finish"
                    Type="PushButton"
                    Width="56"
                    X="427"
                    Y="285" />

            </Dialog>
        </UI>
    </Fragment>
</Wix>